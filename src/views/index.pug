//- Page settings
block variables
	- const pageLang  = 'en'
	- const pageName = 'Untitled Bubble Game'
	- const pageDescription = ''
	- const pageKeywords = ''
	- const pageVersion = '0.0.0.1'


doctype html
html(lang=pageLang)
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
		meta(name='description', content=pageDescription)
		meta(name='keywords', content=pageKeywords)
		meta(name='format-detection', content='telephone=no, date=no, address=no, email=no')
		meta(name='robots', content=pageRobots)

		//- TAB
		title= pageName
		link(rel='shortcut icon', href='assets/images/common/favicon.ico?v=' + pageVersion)

		//- Styles
		link(rel='stylesheet', type='text/css', href='styles/main.min.css?v=' + pageVersion)

	body.body
		.wrapper
			main.main
				block content
					include page/page.pug

		block scripts
			script(src="app.js?v=" + pageVersion)
			//- script(type='module').
				import Swiper from 'https://unpkg.com/swiper@7/swiper-bundle.esm.browser.min.js'